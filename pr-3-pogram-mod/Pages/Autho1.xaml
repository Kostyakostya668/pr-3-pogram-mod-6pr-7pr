<Page x:Class="pr_3_pogram_mod.Pages.Autho1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pr_3_pogram_mod.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Autho1"
      Background="White">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="260"/>
        </Grid.ColumnDefinitions>
        
        <StackPanel Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label x:Name="timeBlock" Foreground="Red" HorizontalAlignment="Center"/>
            <TextBlock Text="Логин"/>
            <TextBox x:Name="txtLogin" IsReadOnlyCaretVisible="True"/>
            <TextBlock Text="Пароль"/>
            <PasswordBox x:Name="passwordBox"/>

            <StackPanel x:Name="capthaPanel">
                <TextBlock x:Name="txtBlockCaptha" Text="Капча"/>
                <TextBox x:Name="txtBoxCaptha"/>
                <TextBlock HorizontalAlignment="Center" x:Name="txtBlockTimer"/>
            </StackPanel>

            <StackPanel Name="ButtonPanel" Orientation="Horizontal" Height="80" HorizontalAlignment="Center">
                <Button x:Name="btnEnterGuests" Margin="5,15,5,5" Content="Войти как гость" Click="btnEnterGuest_Click"/>
                <Button x:Name="btnEnter" Margin="5,15,5,5" Content="Войти" Click="btnEnter_Click"/>
            </StackPanel>
                <Button x:Name="btnHash" Margin="5,0,5,5" Width="150" Content="Узнать хэш пароль" Click="btnHash_Click"/>
        </StackPanel>
    </Grid>
</Page>
