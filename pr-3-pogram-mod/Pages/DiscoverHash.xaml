<Page x:Class="pr_3_pogram_mod.Pages.DiscoverHash"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pr_3_pogram_mod.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DiscoverHash"
      Background="White">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="800"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Введите пароль и узнайте хэш"/>
            <TextBox x:Name="hashText" Margin="5"/>
            <Button x:Name="btndiscover" Content="Узнать" Click="btndiscover_Click"/>
            <TextBox x:Name="tbPrint"/>
        </StackPanel>
    </Grid>
</Page>
