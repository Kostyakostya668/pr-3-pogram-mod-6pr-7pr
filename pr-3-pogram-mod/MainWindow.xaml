<Window x:Name="FrmMain" x:Class="pr_3_pogram_mod.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pr_3_pogram_mod"
        mc:Ignorable="d"
        Title="Main" Height="450" Width="800" Icon="/Resources/ico_car.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="#90EE90">
            <Image Source="/Resources/logo1_iz.jpg" HorizontalAlignment="Left" Margin="5"/>
            <Button x:Name="BACK" Content="Назад" HorizontalAlignment="Right" Cursor="Hand" Click="BACK_Click"/>
        </Grid>

        <Frame x:Name="FrMain" Grid.Row="1" NavigationUIVisibility="Hidden" ContentRendered="FrMain_ContentRendered"/>

    </Grid>
    
</Window>
